CREATE TABLE user (
    id INTEGER NOT NULL, 
    username VARCHAR(20) NOT NULL, 
    password VARCHAR(80) NOT NULL, 
    PRIMARY KEY (id), 
    UNIQUE (username)
);

sqlite> .schema task
CREATE TABLE task (
    id INTEGER NOT NULL,
    title VARCHAR(100) NOT NULL,
    description VARCHAR(200),
    completed BOOLEAN NOT NULL,
    created_at DATETIME,
    user_id INTEGER NOT NULL,
    PRIMARY KEY (id),
    FOREIGN KEY(user_id) REFERENCES user (id)
);
